@model ZATApp.ViewModels.ReceivePaymentViewModel

@{
    ViewBag.Title = "Receive Payment";
}


<div class="forms">
    <h2 class="title1">Receive Payment</h2>
    <div class="form-grids widget-shadow row">
        <div class="form-title">
            <h4>Manual Payment Transaction</h4>

        </div>
        <div class="form-body">
            @using (Html.BeginForm())
            {
                if ((bool)ViewBag.ErrorFlag)
                {
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h1 class="panel-title">Error(s)</h1>
                        </div>
                        <div class="panel-body">
                            <p>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>
                }
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.Cnic)
                    @Html.EditorFor(model => model.Cnic, new { htmlAttributes = new { @class = "form-control", placeholder = "Format: XXXXX-XXXXXXX-X" } })
                    @Html.ValidationMessageFor(model => model.Cnic, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Amount)
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", placeholder = "1000.0" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })

                </div>

                <button type="submit" class="btn btn-default">Confirm</button>

            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
