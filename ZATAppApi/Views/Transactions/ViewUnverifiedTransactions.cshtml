@using PagedList
@using PagedList.Mvc
@model IPagedList<ZATApp.ViewModels.MobileTransactionsViewModel>

@{
    ViewBag.Title = "View Unverified Transactions";
    int counter = 0;
    int count = Model.Count;
}
<div class="general">
    <div class="panel panel-info widget-shadow">
        <div class="panel-heading">
            <h2 class="title2">View Unverified Transactions</h2>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().ReferenceNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().ServiceName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().DriverName)
                        </th>
                        <th>
                            Action
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(++counter)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReferenceNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Time)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServiceName)
                            </td>
                            <td>
                                Rs. @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DriverName)
                            </td>
                            <td>
                                @if (!item.IsVerified)
                                {
                                    var id = "id" + item.Id;
                                    <a href="#" class="btn btn-danger" id="@id">Verify</a>
                                }
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <div class="aligncenter">

                @Html.PagedListPager(Model, page => Url.Action("ViewUnverifiedTransactions", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded, DisplayEllipsesWhenNotShowingAllPageNumbers = true, DisplayPageCountAndCurrentLocation = true, DisplayLinkToIndividualPages = false, DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded, DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded })
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            @foreach (var item in Model)
            {
        <text>
            var id = "#id".concat(@item.Id);
            $(id).click(function () {
                $.ajax({
            url: "@Url.Action("VerifyTransaction",new { id = item.Id })", success: function(result) {
                        $(id).hide();
            }
        });
            });
            </text>
            }

        });
    </script>
}




