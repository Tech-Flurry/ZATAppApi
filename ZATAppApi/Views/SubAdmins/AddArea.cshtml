@model ZATApp.ViewModels.AddAreaViewModel

@{
    ZATApp.Models.SubAdmin subAdmin = new ZATApp.Models.SubAdmin(Model.SubAdminId);
    ViewBag.Title = "Add Area " + subAdmin.FullName.FirstName;
}
<div class="forms">
    <h2 class="title1">@ViewBag.Title</h2>
    <div class="form-grids widget-shadow row">
        <div class="form-title">
            <h4>Add New Area</h4>
        </div>
        <div class="form-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model=>model.SubAdminId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.AreaName, htmlAttributes: new { @class = "control-label" })

                        @Html.EditorFor(model => model.AreaName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Area Name e.g. Lahore City" } })
                        @Html.ValidationMessageFor(model => model.AreaName, "", new { @class = "text-danger" })

                    </div>
                    @Html.ActionLink("Back", "Index",null,new { @class="btn btn-primary"})
                    <button type="submit" class="btn btn-default">Add</button>
            }
        </div>
    </div>
</div>






